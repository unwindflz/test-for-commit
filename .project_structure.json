{
  "version": "1.0",
  "project_type": "python_application",
  "recommended_structure": {
    "src/": {
      "description": "Main source code directory",
      "file_types": ["*.py"],
      "subdirectories": {
        "models/": "Data models and architecture",
        "utils/": "Tool functions and helper programs"
      }
    },
    "docs/": {
      "description": "Documentation files",
      "file_types": ["*.md", "*.rst"],
      "subdirectories": {}
    },
    "tests/": {
      "description": "Test files",
      "file_types": ["test_*.py", "*_test.py"],
      "subdirectories": {
        "unit/": "Unit tests"
      }
    },
    "config/": {
      "description": "Configuration files",
      "file_types": ["*.yaml", "*.json"],
      "subdirectories": {}
    }
  },
  "guidelines": [
    "Put main application code in src/",
    "Put tests in tests/ directories",
    "Record all content in docs/",
    "Store configuration files in config/",
    "Use clear, descriptive directory names"
  ]
}